<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/add_button_layout"/>

    <include layout="@layout/searchbar_layout"/>

    <RelativeLayout
        android:id="@+id/loadingProp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent">

        <com.tsuryo.swipeablerv.SwipeableRecyclerView
            android:nestedScrollingEnabled="false"
            android:id="@+id/booksRecylerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:rightBgColor="@color/red"
            app:rightImage="@drawable/trash_ic"
            app:rightText="Delete"
            android:clipToPadding="false"
            android:paddingTop="54dp"
            android:scrollbars="vertical"
            app:layoutManager="LinearLayoutManager" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>